<h1>Books</h1>
<table>
	<tr align="center"><th>Title</th><th>Body</th><th colspan="3"></th></tr>
<% @books.each do |book| %>
	<tr>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= link_to 'Show', book_path(book) %></td>
	<td><%= link_to 'Edit', edit_book_path(book) %></td>
	<td><%= link_to 'Destroy' ,book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   

	</tr>
<% end %>
</table>
<h1>New book</h1>
<%= form_for(@book) do |f| %>
	  <% if @book.errors.any? %>
	  <div id="errors">
        <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        	<% end %>
    	</ul>
          </div>
    <% end %>

	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %><br>

	<%= f.submit 'Create Book' %>
<% end %>
